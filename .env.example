# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/symbi-synergy

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# LLM Provider API Keys
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Together AI
TOGETHER_API_KEY=your_together_api_key_here

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Encryption Key for API Keys Storage
ENCRYPTION_KEY=your_encryption_key_here

# CORS Configuration
# Prefer CORS_ORIGINS as a comma-separated list; CORS_ORIGIN kept for backward compatibility
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ORIGIN=

# Optional: Ledger signing key (Ed25519, PEM private key)
# LEDGER_SIGNING_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"

# Webhook signature (HMAC SHA-256). If set, incoming webhooks must include header x-symbi-signature.
WEBHOOK_SECRET=change-me
