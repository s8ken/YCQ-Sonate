{
  "name": "symbi-synergy-rebuilt",
  "version": "1.0.0",
  "description": "A minimal rebuild of the Symbi Synergy platform",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon backend/server.js",
    "dev:frontend": "cd frontend && npm start",
    "install:all": "npm install && cd frontend && npm install",
    "build": "cd frontend && npm run build",
    "test:backend": "cd backend && jest --config=jest.config.js --detectOpenHandles --forceExit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.60.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-async-handler": "^1.2.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "js-yaml": "^4.1.0",
    "jsdom": "^26.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.8.7",
    "morgan": "^1.10.1",
    "openai": "^5.16.0",
    "prom-client": "^15.1.2",
    "snowflake-sdk": "^2.2.0",
    "socket.io": "^4.8.1",
    "swagger-ui-express": "^5.0.1",
    "weaviate-ts-client": "^2.2.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^30.1.1",
    "mongodb-memory-server": "^10.2.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  }
}
